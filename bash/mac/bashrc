# PS1-v1
# export PS1='\[\e[0;31m\]\u\[\e[0m\]@\[\e[0;32m\]\h\[\e[0m\]:\[\e[0;33m\]\w\[\e[0m\]\n\[\e[1;33m\][\d \t]\[\e[m\]$ '
# PS1-v2
# export PS1='\[\e[0;31m\]\u\[\e[0m\]@\[\e[0;32m\]aws-roa-cli-ninja\[\e[0m\]:\[\e[0;33m\]\w\[\e[0m\]\n\[\e[1;33m\][\d \t]\[\e[m\]$ '
